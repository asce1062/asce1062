---
import type { ImageMetadata } from 'astro';
import { Image } from 'astro:assets';

interface Props {
    image: string;
    altText: string;
    maxWidth?: string;
}

const { image, altText, maxWidth = "full" } = Astro.props;
const images = import.meta.glob<{ default: ImageMetadata }>('/src/assets/**/*.{jpeg,jpg,png,gif}');
---
<div class = "pb-4">
    <figure class="max-w-full">
    <Image
        src = {images[image]()}
        alt={altText}
        title = {altText}
        class = {`h-auto max-w-${maxWidth} mx-auto rounded-lg`}/>
        <figcaption class="mt-2 text-sm text-center text-gray-500 dark:text-gray-400">{altText}</figcaption>
    </figure>
</div>
