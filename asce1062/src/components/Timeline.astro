---
const { timeline, sections } = Astro.props;
import type { TimelineEntry, TimelineSection } from "@/types";
---

{
	sections ? (
		<div>
			{sections.map((section: TimelineSection) => (
				<div class="mb-8">
					<h1 class="font-bold mb-4 text-palette-900 dark:text-light-900 underline decoration-4 bg-light-700 dark:bg-palette-700">
						{section.sectionTitle}
					</h1>
					<ol class="relative border-s border-light-100 dark:border-palette-100">
						{section.entries.map((data: TimelineEntry) => (
							<li class="mb-10 ms-4">
								<div class="absolute w-3 h-3 rounded-full mt-1.5 -start-1.5 border border-light-100 dark:border-palette-100 bg-light-700 dark:bg-palette-700" />
								<time class="mb-1 text-xs font-normal leading-none text-light-300 dark:text-palette-300 bg-light-700 dark:bg-palette-700">
									{data.date}
								</time>
								<h4 class="font-semibold text-palette-900 dark:text-light-900 bg-light-700 dark:bg-palette-700">
									{data.title}
								</h4>
								{data.descriptions.map((description: string) => (
									<p class="mb-4 font-normal text-light-800 dark:text-palette-800 text-sm bg-light-700 dark:bg-palette-700">
										{description}
									</p>
								))}
								{data.moreInformation && (
									<a
										href={data.moreInformation}
										target="_blank"
										rel="noopener noreferrer"
										class="no-underline mb-1 inline-flex items-center px-4 py-2 text-xs font-normal border border-light-600 dark:border-palette-600 focus:ring-light-700 dark:focus:ring-palette-700 hover:underline hover:decoration-wavy text-light-300 dark:text-palette-300 bg-light-700 dark:bg-palette-700 focus:outline-none focus:ring-4 hover:border-light-600 dark:hover:border-palette-600">
										Learn more
										<svg
											class="w-3 h-3 ms-2 rtl:rotate-180"
											aria-hidden="true"
											xmlns="http://www.w3.org/2000/svg"
											fill="none"
											viewBox="0 0 14 10">
											<path
												stroke="currentColor"
												stroke-linecap="round"
												stroke-linejoin="round"
												stroke-width="2"
												d="M1 5h12m0 0L9 1m4 4L9 9"
											/>
										</svg>
									</a>
								)}
							</li>
						))}
					</ol>
				</div>
			))}
		</div>
	) : (
		<ol class="relative border-s border-light-100 dark:border-palette-100">
			{timeline.map((data: TimelineEntry) => (
				<li class="mb-10 ms-4">
					<div class="absolute w-3 h-3 rounded-full mt-1.5 -start-1.5 border border-light-100 dark:border-palette-100 bg-light-700 dark:bg-palette-700" />
					<time class="mb-1 text-xs font-normal leading-none text-light-300 dark:text-palette-300 bg-light-700 dark:bg-palette-700">
						{data.date}
					</time>
					<h4 class="font-semibold text-palette-900 dark:text-light-900 bg-light-700 dark:bg-palette-700">
						{data.title}
					</h4>
					{data.descriptions.map((description: string) => (
						<p class="mb-4 font-normal text-light-800 dark:text-palette-800 text-sm bg-light-700 dark:bg-palette-700">
							{description}
						</p>
					))}
					{data.moreInformation && (
						<a
							href={data.moreInformation}
							target="_blank"
							rel="noopener noreferrer"
							class="no-underline mb-1 inline-flex items-center px-4 py-2 text-xs font-normal border border-light-600 dark:border-palette-600 focus:ring-light-700 dark:focus:ring-palette-700 hover:underline hover:decoration-wavy text-light-300 dark:text-palette-300 bg-light-900 dark:bg-palette-900 focus:outline-none focus:ring-4 hover:border-light-600 dark:hover:border-palette-600">
							Learn more
							<svg
								class="w-3 h-3 ms-2 rtl:rotate-180"
								aria-hidden="true"
								xmlns="http://www.w3.org/2000/svg"
								fill="none"
								viewBox="0 0 14 10">
								<path
									stroke="currentColor"
									stroke-linecap="round"
									stroke-linejoin="round"
									stroke-width="2"
									d="M1 5h12m0 0L9 1m4 4L9 9"
								/>
							</svg>
						</a>
					)}
				</li>
			))}
		</ol>
	)
}
