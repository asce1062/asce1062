---
const { timeline, sections } = Astro.props;
import type { TimelineEntry, TimelineSection } from "@/types";
---

{
	sections ? (
		<div>
			{sections.map((section: TimelineSection) => (
				<div class="mb-8">
					<h1 class="font-bold mb-4 text-warning underline decoration-4">{section.sectionTitle}</h1>
					<ol class="relative border-s border-neutral-content">
						{section.entries.map((data: TimelineEntry) => (
							<li class="mb-10 ms-4">
								<div class="absolute w-3 h-3 rounded-full mt-1.5 -start-1.5 border border-neutral-content" />
								<time class="mb-1 text-xs italic leading-none text-warning">{data.date}</time>
								<h4 class="font-semibold text-base-content">{data.title}</h4>
								{data.descriptions.map((description: string) => (
									<p class="mb-4 font-normal text-neutral-content text-sm font-bold">{description}</p>
								))}
								{data.moreInformation && (
									<a
										href={data.moreInformation}
										target="_blank"
										rel="noopener noreferrer"
										class="no-underline mb-1 inline-flex items-center px-4 py-2 text-xs font-normal hover:underline hover:decoration-wavy link-action link-action--accent">
										Learn more
										<svg
											class="w-3 h-3 ms-2 rtl:rotate-180"
											aria-hidden="true"
											xmlns="http://www.w3.org/2000/svg"
											fill="none"
											viewBox="0 0 14 10">
											<path
												stroke="currentColor"
												stroke-linecap="round"
												stroke-linejoin="round"
												stroke-width="2"
												d="M1 5h12m0 0L9 1m4 4L9 9"
											/>
										</svg>
									</a>
								)}
							</li>
						))}
					</ol>
				</div>
			))}
		</div>
	) : (
		<ol class="relative border-s border-neutral-content">
			{timeline.map((data: TimelineEntry) => (
				<li class="mb-10 ms-4">
					<div class="absolute w-3 h-3 rounded-full mt-1.5 -start-1.5 border border-neutral-content" />
					<time class="mb-1 text-xs italic leading-none text-warning">{data.date}</time>
					<h4 class="font-semibold text-base-content">{data.title}</h4>
					{data.descriptions.map((description: string) => (
						<p class="mb-4 font-bold text-neutral-content text-sm">{description}</p>
					))}
					{data.moreInformation && (
						<a
							href={data.moreInformation}
							target="_blank"
							rel="noopener noreferrer"
							class="no-underline mb-1 inline-flex items-center px-4 py-2 text-xs font-normal hover:underline hover:decoration-wavy link-action link-action--accent">
							Learn more
							<svg
								class="w-3 h-3 ms-2 rtl:rotate-180"
								aria-hidden="true"
								xmlns="http://www.w3.org/2000/svg"
								fill="none"
								viewBox="0 0 14 10">
								<path
									stroke="currentColor"
									stroke-linecap="round"
									stroke-linejoin="round"
									stroke-width="2"
									d="M1 5h12m0 0L9 1m4 4L9 9"
								/>
							</svg>
						</a>
					)}
				</li>
			))}
		</ol>
	)
}
