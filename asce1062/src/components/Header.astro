---
import ThemeSwitcher from '../components/ThemeSwitcher.astro';
const url = new URL(Astro.url.pathname, Astro.site);
const link = url.pathname.split("/").filter((i) => i);
---

<header>
    <!-- prettier-ignore -->
    <div id = "navigation" class = "mb-3">
        <ThemeSwitcher default="dark" />

        <p>~/ <a class = "no-underline" href = "/">home</a>
        { link ?
        <span> { link.map((data) => <span> / <a class = "no-underline" href = {`/${data}`}> {data}</a></span>) }
        </span> : null}
        </p>
    </div>
    <h1>hi, i'm Alex.</h1>
    <hr />
    <div class="flex flex-col justify-between text-sm leading-7 sm:leading-5 transition-all duration-300 sm:flex-row sm:text-base">
        <div class = "text-palette-800">
            <b><a class="icon" href="https://github.com/asce1062"><i class="icon-github mr-2"></i>@asce1062</a></b><br/>
            <b><a class="icon" href="https://www.linkedin.com/in/alex-mbugua"><i class="icon-linkedin mr-2"></i>Alex Mbugua</a></b>
        </div>
        <div class="text-palette-800">
            <b><a class="icon"
                href="Alex%20Mbugua%20Ngugi%20-%20Resume.pdf"
                target="_blank"
                rel="noopener noreferrer">
                <i class="icon-eye-fill mr-2"></i>Resume</a>
              |
                <a class="icon"
                href="Alex%20Mbugua%20Ngugi%20-%20Resume.pdf"
                download="Alex Mbugua Ngugi - Resume.pdf">
                <i class="icon-file-arrow-down-fill mr-2"></i>Resume.pdf</a></b><br/>
            <b><a class="icon" href="mailto:alex.mbugua@outlook.com"><i class="icon-envelope-at-fill mr-2"></i>alex.mbugua@outlook.com</a></b>
        </div>
    </div>
    <hr />
</header>
