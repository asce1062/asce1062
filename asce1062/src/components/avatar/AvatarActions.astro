---
/**
 * Action buttons for randomize, download, and share functionality
 */
import ShareNotification from "@/components/ShareNotification.astro";
---

<div class="action-buttons">
	<button id="randomize-btn" class="btn btn-primary font-retro">Randomize</button>
	<button id="download-btn" class="btn btn-secondary font-retro">Download</button>
	<a
		id="share-btn"
		class="icon group hover:text-accent scale-90 p-2 hover:-rotate-6 sm:p-1 cursor-pointer"
		aria-label="Share Avatar">
		<i class="icon-share text-2xl"></i>
	</a>
</div>

<ShareNotification id="avatar-share-notification" />
