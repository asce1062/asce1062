---
const { skillsSections } = Astro.props;
import type { SkillsSection, SkillCategory } from "@/types";
---

<div class="space-y-6">
	{
		skillsSections.map((section: SkillsSection) => (
			<div>
				<h1 class="font-bold mb-1 text-warning underline decoration-4">{section.sectionTitle}</h1>

				{section.items && (
					<div class="mt-4 space-y-2 text-sm text-base-content">
						{section.items.map((item: string) => (
							<div class="p-1 ml-0 mr-2 inline-block bg-secondary text-secondary-content">{item}</div>
						))}
					</div>
				)}

				{section.categories && (
					<div>
						{section.categories.map((category: SkillCategory) => (
							<div class="mt-4">
								<h3 class="mb-1 text-sm text-neutral-content underline decoration-dashed font-bold">
									{category.categoryTitle}
								</h3>
								<div class="flex flex-wrap gap-2">
									{category.skills.map((skill: string) => (
										<code class="text-xs bg-success text-success-content">{skill}</code>
									))}
								</div>
							</div>
						))}
					</div>
				)}
			</div>
		))
	}
</div>
