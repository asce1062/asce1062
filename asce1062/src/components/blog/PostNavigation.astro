---
/**
 * Previous and next blog post links
 */

import type { CollectionEntry } from "astro:content";

interface Props {
	previousPost: CollectionEntry<"blog"> | null;
	nextPost: CollectionEntry<"blog"> | null;
}

const { previousPost, nextPost } = Astro.props;
---

<div data-pagefind-ignore class="grid grid-cols-1 gap-6 sm:grid-cols-2">
	{
		previousPost && (
			<a
				href={`/blog/${previousPost.id}`}
				class="group no-underline flex w-full gap-1 hover:bg-transparent hover:dark:bg-transparent hover:opacity-75">
				<i class="icon-chevron-left text-xl group-hover:text-light-300 group-hover:dark:text-palette-300" />
				<div>
					<b>Previous Post</b>
					<div class="text-sm group-hover:text-palette-900 group-hover:dark:text-light-900">
						{previousPost.data.title}
					</div>
				</div>
			</a>
		)
	}
	{
		nextPost && (
			<a
				href={`/blog/${nextPost.id}`}
				class="group no-underline flex w-full justify-end gap-1 text-right sm:col-start-2 hover:bg-transparent hover:dark:bg-transparent hover:opacity-75">
				<div>
					<b>Next Post</b>
					<div class="text-sm group-hover:text-palette-900 group-hover:dark:text-light-900">{nextPost.data.title}</div>
				</div>
				<i class="icon-chevron-right text-xl group-hover:text-light-300 group-hover:dark:text-palette-300" />
			</a>
		)
	}
</div>
