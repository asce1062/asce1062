---
/**
 * Previous and next content navigation
 */

import type { CollectionEntry } from "astro:content";

type NavigableEntry = CollectionEntry<"blog"> | CollectionEntry<"notes"> | null;

interface Props {
	previousPost: NavigableEntry;
	nextPost: NavigableEntry;
	basePath?: string;
}

const { previousPost, nextPost, basePath = "/blog" } = Astro.props;
---

<div data-pagefind-ignore class="grid grid-cols-1 gap-6 sm:grid-cols-2">
	{
		previousPost && (
			<a
				href={`${basePath}/${previousPost.id}`}
				class="group no-underline flex w-full gap-1 hover:bg-transparent hover:opacity-75">
				<i class="icon-chevron-left text-xl group-hover:text-warning" />
				<div>
					<b>Previous</b>
					<div class="text-sm group-hover:text-neutral-content">{previousPost.data.title}</div>
				</div>
			</a>
		)
	}
	{
		nextPost && (
			<a
				href={`${basePath}/${nextPost.id}`}
				class="group no-underline flex w-full justify-end gap-1 text-right sm:col-start-2 hover:bg-transparent hover:opacity-75">
				<div>
					<b>Next</b>
					<div class="text-sm group-hover:text-neutral-content">{nextPost.data.title}</div>
				</div>
				<i class="icon-chevron-right text-xl group-hover:text-warning" />
			</a>
		)
	}
</div>
