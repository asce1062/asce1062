---
import Layout from "../layouts/Layout.astro";
import PreviewImage from "../components/PreviewImage.astro";

interface Props {
    title: string;
    date: string;
    image: string;
    alt: string;
    description: string;
    tags: Array<any>;
}

const { title, date, image, alt, description, tags } = Astro.props;
---
<Layout title={title} ogImage=`open-graph${(Astro.url.pathname).slice(0, -1)}.png` description={description}>
    <main>
        <h2>{title}</h2>
        <span><i><b>{date}</b> | {description}</i></span>
        <PreviewImage src = {image} altText = {alt}/>
            <span>
                tags: { tags.map(tag =>
                <a class="mr-2" href = {`/tags/${tag}`}>{tag}</a>
                )}
            </span>
        <hr>
        <slot/>
    </main>
</Layout>
