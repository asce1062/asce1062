{
  "$schema": "https://unpkg.com/knip@latest/schema.json",
  "ignoreDependencies": [
    "pagefind",
    "lightningcss",
    "@netlify/plugin-sitemap",
    "@netlify/plugin-lighthouse",
    "netlify-plugin-checklinks",
    "netlify-plugin-submit-sitemap",
    "vite-plugin-pwa",
    "autoprefixer",
    "postcss-nesting",
    "papaparse",
    "@types/papaparse"
  ],
  "ignore": [
    "public/fonts/icomoon/**",
    "scripts/**",
    "src/scripts/scrollProgress.ts",
    "src/scripts/keyboardShortcuts.ts",
    "src/scripts/themeManager.ts",
    "src/scripts/guestbookCounter.ts",
    "src/scripts/copyToClipboard.ts",
    "src/scripts/shareManager.ts",
    "src/scripts/iframeTheme.ts",
    "src/scripts/paletteCopy.ts",
    "src/lib/api/github.ts",
    "public/css/style.css",
    "src/config/index.ts",
    "src/config/site-utils.ts",
    "db/import-csv.ts"
  ],
  "entry": ["markdown.config.ts", "src/pages/**/*.{astro,mdx}", "src/layouts/**/*.astro", "src/components/**/*.astro"],
  "ignoreExportsUsedInFile": {
    "interface": true,
    "type": true
  }
}
