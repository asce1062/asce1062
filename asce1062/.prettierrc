{
	"plugins": ["prettier-plugin-astro", "prettier-plugin-toml"],
	"semi": true,
	"singleQuote": false,
	"tabWidth": 2,
	"useTabs": true,
	"printWidth": 120,
	"trailingComma": "es5",
	"bracketSpacing": true,
	"arrowParens": "always",
	"endOfLine": "lf",
	"overrides": [
		{
			"files": "*.astro",
			"options": {
				"parser": "astro",
				"bracketSameLine": true,
				"htmlWhitespaceSensitivity": "ignore"
			}
		},
		{
			"files": "*.json",
			"options": {
				"useTabs": false,
				"tabWidth": 2
			}
		},
		{
			"files": "*.toml",
			"options": {
				"useTabs": false,
				"tabWidth": 2
			}
		}
	]
}
